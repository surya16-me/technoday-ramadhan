// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model mst_user {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

model mst_schedule {
  id          Int      @id @default(autoincrement())
  start_date  DateTime
  end_date    DateTime
  status      Boolean  @default(true)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}

model trn_register {
  id         Int        @id @default(autoincrement())
  name       String
  npk        String     @unique
  section    String
  attendance String
  groupId    Int?
  group      trn_group? @relation(fields: [groupId], references: [id])
  createdAt  DateTime   @default(now())
  isCheckedIn Boolean    @default(false)
}

model trn_comment {
  id         Int      @id @default(autoincrement())
  content    String
  createdAt  DateTime @default(now())
}

model trn_group {
  id           Int            @id @default(autoincrement())
  groupNumber  Int
  groupName    String
  color        String         // For card styling
  participants trn_register[]
  createdAt    DateTime       @default(now())
}
